# Nexa Core Environment Configuration

# ============================================================================
# API SERVICE
# ============================================================================
NODE_ENV=development
PORT=3000
API_BASE_URL=http://localhost:3000

# ============================================================================
# DATABASE
# ============================================================================
DATABASE_URL=postgresql://postgres:password@localhost:5432/nexa_core_dev
DATABASE_POOL_MIN=2
DATABASE_POOL_MAX=10

# ============================================================================
# AUTHENTICATION
# ============================================================================
JWT_SECRET=your_jwt_secret_change_in_production
JWT_EXPIRES_IN=7d
API_KEY_SALT=your_api_key_salt_change_in_production

# ============================================================================
# ANALYZER SERVICE (Already Deployed)
# ============================================================================
ANALYZER_URL=https://nexa-doc-analyzer-oct2025.onrender.com
ANALYZER_API_KEY=optional_if_you_add_auth_later
ANALYZER_TIMEOUT=60000

# ============================================================================
# AWS (S3 for Photos, SQS for Events)
# ============================================================================
AWS_REGION=us-west-2
AWS_ACCESS_KEY_ID=your_aws_key_here
AWS_SECRET_ACCESS_KEY=your_aws_secret_here

# S3 Buckets
S3_BUCKET_PHOTOS=nexa-field-photos-dev
S3_BUCKET_PDFS=nexa-audit-pdfs-dev
S3_BUCKET_SPECS=nexa-spec-library-dev

# SQS Queues
SQS_AUDIT_NOTIFICATIONS_URL=https://sqs.us-west-2.amazonaws.com/your-account/nexa-audit-notifications

# ============================================================================
# FRONTEND (Web Dashboard)
# ============================================================================
REACT_APP_API_URL=http://localhost:3000
REACT_APP_ENV=development

# ============================================================================
# MOBILE APP
# ============================================================================
EXPO_PUBLIC_API_URL=http://localhost:3000
EXPO_PUBLIC_OFFLINE_SYNC_INTERVAL=300000

# ============================================================================
# FEATURE FLAGS
# ============================================================================
ENABLE_OFFLINE_AI=false
ENABLE_ANALYTICS=true
ENABLE_SWAGGER_DOCS=true
ENABLE_DEBUG_LOGGING=true

# ============================================================================
# MONITORING & LOGGING
# ============================================================================
LOG_LEVEL=info
SENTRY_DSN=
DATADOG_API_KEY=

# ============================================================================
# RATE LIMITING
# ============================================================================
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# ============================================================================
# FILE UPLOADS
# ============================================================================
MAX_UPLOAD_SIZE_MB=100
ALLOWED_FILE_TYPES=image/jpeg,image/png,application/pdf

# ============================================================================
# REDIS (Optional - for sessions/caching)
# ============================================================================
REDIS_URL=redis://localhost:6379
REDIS_ENABLE=false

# ============================================================================
# EMAIL (Future - notifications)
# ============================================================================
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=
SMTP_PASSWORD=
EMAIL_FROM=noreply@nexa.com
